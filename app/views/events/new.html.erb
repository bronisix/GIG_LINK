<h2>New Event</h2>

<%= form_with model: @event, url: bar_events_path(@bar) do |form| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div data-controller="flatpicker">
    <%= simple_form_for [@bar, @event],
      html: {
        data: {
          controller: 'flatpicker'
              }
            } do |f| %>
    <%= f.input :date,
                as: :string,
                input_html: {
                data: {
                  flatpicker_target: 'DateInput',
                }
              } %>

    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :bar_comment %>
      <%= form.text_area :bar_comment, class: "form-control" %>
    </div>

    <%= f.submit 'Book the event', class: 'btn btn-primary' %>
    <% end %>
    <%= link_to 'Back', bar_path(@bar), class:"btn btn-light" %>
  </div>
<% end %>
