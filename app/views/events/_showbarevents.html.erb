
<div class="list-group">
  <% events.each do |event| %>
    <div class="card-event">
      <%= cl_image_tag event.bar.photo.key %>
      <div class="card-event-infos">
        <h2><%= event.name %></h2>
        <p>When <br> <%= event.date %></p>
        <p>Who <br> <%= event.user.band_name%> </p>
      </div>
    </div>
  <% end %>
</div>
