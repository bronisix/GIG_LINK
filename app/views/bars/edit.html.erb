<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new bar</h3>
        <%= simple_form_for @bar do |f| %>
          <%= f.input :name, placeholder: 'Nom du bar?' %>
          <%= f.input :location, placeholder: 'Adresse du bar?', class: "d-none"%>
          <%= f.input :location,
            input_html: {data: {address_autocomplete_target: "address"}},
            wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
          %>
          <%= f.input :url, placeholder: 'Où est-ce que se hacke?' %>
          <%= f.input :telephone, placeholder: 'Où est-ce que ça se call?' %>
          <%= f.input :photo, as: :file %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

